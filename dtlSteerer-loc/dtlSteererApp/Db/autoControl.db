# Manual/Auto Control for Steerer System
# set of records required to control DTL steerer system in different configuartions [man|auto]
#
# developed by Maurizio Montis | INFN-LNL


record(bo, "DTL:PwrC-PSC:AutoCmd") {
	field(DESC, "auto control cmd")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "MANUAL")
	field(ONAM, "AUTO")
}

# Software Readback - Value is updated by Steerer State Machine placed in dtlThermosensors IOC 
record(bo, "DTL:PwrC-PSC:AutoCmd-RB") {
	field(DESC, "auto control rdbk")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "MANUAL")
	field(ONAM, "AUTO")
}

record(bo, "DTL:PwrC-PSC:OpRun") {
	field(DESC, "Start operations")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "NOT START")
	field(ONAM, "START")
}

record(bo, "DTL:PwrC-PSC:OpStop") {
	field(DESC, "Stop operations")
	field(PINI, "YES")
	field(VAL, 0)
	field(ZNAM, "NOT STOP")
	field(ONAM, "STOP")
}
